<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@style/navbar_btn</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="WithLoadingBG" parent="AppTheme">
        <item name="android:windowBackground">@drawable/loading_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="WeiboEditBG" parent="AppTheme">
        <item name="android:windowBackground">@drawable/weibo_edit_bg</item>
    </style>

    <!-- text style -->
    <style name="Text_spinner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="navigation_title">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="school_title">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="cell_tips">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#666</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="cell_title_999">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#999</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="cell_text">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#666</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="cell_text_999">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#666</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="cell_09c">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#09c</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>

    <style name="edit_14">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#333</item>
        <item name="android:shadowColor">#fff</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
    </style>
    <!-- button style -->
    <style name="green_btn">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#85000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="green_btn14">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#85000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="navbar_btn">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/text_selector_navbar</item>
        <item name="android:shadowColor">#85ffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">1dip</item>
        <item name="android:minWidth">1dip</item>
    </style>
    <!-- Text for TabHost Selector -->
    <style name="tab_title_TextStyle">
        <item name="android:textSize">10dip</item>
        <item name="android:shadowColor">#85000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:textColor">@drawable/tab_main_nav_text_selector</item>
    </style>

    <style name="weibo_tab_title_TextStyle">
        <item name="android:textSize">10dip</item>
        <item name="android:shadowColor">#85000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:textColor">#fff</item>
    </style>
    <!-- list item -->
    <style name="listTopItemStyle">
        <item name="android:background">@drawable/list_selector_top</item>
    </style>

    <style name="listMidItemStyle">
        <item name="android:background">@drawable/list_selector_mid</item>
    </style>

    <style name="listBottomItemStyle">
        <item name="android:background">@drawable/list_selector_bottom</item>
    </style>

    <style name="listSingleItemStyle">
        <item name="android:background">@drawable/list_selector_single</item>
    </style>

    <style name="ShareDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/ShareDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ShareDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

</resources>