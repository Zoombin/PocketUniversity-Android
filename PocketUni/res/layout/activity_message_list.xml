<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <ListView
        android:id="@+id/message_item_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="47dip"
        android:layout_marginTop="44dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <TextView
            android:id="@+id/navbar_TitleText"
            style="@style/navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="与达芬奇的对话" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tab_weibo_bg"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:padding="5dip" >

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginRight="6dip"
            android:layout_weight="1"
            android:background="@drawable/widget_input"
            android:hint="回复私信"
            android:padding="8dip"
            android:singleLine="true"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_btn"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:text="发送"
            android:textColor="#333"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>