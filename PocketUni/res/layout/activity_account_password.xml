<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dip" >

            <EditText
                android:id="@+id/edit_old_passsword"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/widget_input"
                android:hint="原始密码"
                android:inputType="textPassword"
                android:padding="8dip"
                android:singleLine="true"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edit_new_password"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:layout_marginTop="12dip"
                android:background="@drawable/widget_input"
                android:hint="新密码"
                android:inputType="textPassword"
                android:padding="8dip"
                android:textSize="14sp" >
            </EditText>

            <EditText
                android:id="@+id/edit_repeat_password"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:layout_marginTop="12dip"
                android:background="@drawable/widget_input"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="8dip"
                android:textSize="14sp" >
            </EditText>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/blue_highlight" >

        <TextView
            android:id="@+id/navbar_TitleText"
            style="@style/navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="账号密码修改" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />

        <Button
            android:id="@+id/btn_submit"
            style="@style/navbar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_selector_navbar"
            android:text="提交" />
    </RelativeLayout>

</RelativeLayout>