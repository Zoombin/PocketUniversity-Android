<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar00" />

        <ImageView
            android:id="@+id/img_avatar_mask"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_alignParentLeft="true"
            android:src="@drawable/avatar_mask" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_toLeftOf="@+id/btn_invite"
            android:layout_toRightOf="@+id/img_avatar"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#90ffffff"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="0.01"
                android:text="邻家女孩"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_params"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="微博:129   粉丝:230   关注:120"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/widget_btn"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:text="邀请"
            android:textColor="#666"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:scaleType="fitXY"
        android:src="@drawable/weibo_split" />

</LinearLayout>