<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/member_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />
    
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/apply_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/blue_highlight" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_marginTop="2dip"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_member_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_nav_following"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.01"
                android:text="成员管理"
                android:textColor="#fff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_apply_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_nav_followed"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.01"
                android:text="申请管理"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

</RelativeLayout>