<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ad_banner" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dip" >

            <LinearLayout
                android:id="@+id/account_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/list_item_bg_top"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_account" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="账号管理"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/homepage_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/list_item_bg_mid"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_homepage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="个人主页"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qrcard_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/list_item_bg_mid"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="二维码名片"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qrscan_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/list_item_bg_bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_twocode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="扫描二维码"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_marginTop="12dip"
                android:background="@drawable/list_item_bg_top"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_aq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="常见问题"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/list_item_bg_mid"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:gravity="center_vertical"
                    android:text="检测更新"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_version"
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="当前版本：2.0"
                    android:textColor="#aaa"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/list_item_bg_bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="关于PocketUni"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/signout_layout"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_marginTop="12dip"
                android:background="@drawable/list_item_bg_single"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_more_cancel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="注销账号"
                    android:textColor="#666"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="44dip"
                    android:scaleType="center"
                    android:src="@drawable/more_black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    <com.xyhui.widget.AdBannerLayout
        android:id="@+id/ad_banner"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/navbar"
        android:layout_marginTop="-6dip" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/top_bg_yellow" >

        <TextView
            android:id="@+id/navbar_TitleText"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="更多" />
    </RelativeLayout>

</RelativeLayout>