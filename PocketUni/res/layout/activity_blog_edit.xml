<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navbar"
        android:layout_marginTop="-6dip"
        android:background="@drawable/none"
        android:hint="帖子标题"
        android:padding="8dip"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/img_split"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_title"
        android:scaleType="fitXY"
        android:src="@drawable/weibo_split" />

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/toolbar"
        android:layout_below="@+id/img_split"
        android:layout_marginBottom="-6dip"
        android:background="@drawable/none"
        android:gravity="top"
        android:hint="帖子正文"
        android:inputType="textMultiLine"
        android:padding="8dip" />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bar_tools_bg"
            android:gravity="bottom" >

            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:cropToPadding="true"
                android:padding="6dip"
                android:scaleType="centerCrop"
                android:src="@drawable/none"
                android:visibility="gone" />

            <Button
                android:id="@+id/toolbar_photo"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="@drawable/btn_selector_edit_photo" />

            <Button
                android:id="@+id/toolbar_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="@drawable/btn_selector_edit_topic" />

            <Button
                android:id="@+id/toolbar_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="@drawable/btn_selector_edit_at" />

            <Button
                android:id="@+id/toolbar_face"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:background="@drawable/btn_selector_edit_face" />

            <TextView
                android:id="@+id/text_counter"
                android:layout_width="106dip"
                android:layout_height="44dip"
                android:layout_marginRight="8dip"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="字数：0/140"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_faces"
            android:layout_width="match_parent"
            android:layout_height="268dip"
            android:gravity="center"
            android:padding="4dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/face_grid_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_fece1"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_tongue" />

                    <ImageView
                        android:id="@+id/img_fece2"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_smile" />

                    <ImageView
                        android:id="@+id/img_fece3"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_lol" />

                    <ImageView
                        android:id="@+id/img_fece4"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_loveliness" />

                    <ImageView
                        android:id="@+id/img_fece5"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_titter" />

                    <ImageView
                        android:id="@+id/img_fece6"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_biggrin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_fece7"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_shy" />

                    <ImageView
                        android:id="@+id/img_fece8"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_sweat" />

                    <ImageView
                        android:id="@+id/img_fece9"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_yun" />

                    <ImageView
                        android:id="@+id/img_fece10"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_ku" />

                    <ImageView
                        android:id="@+id/img_fece11"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_88" />

                    <ImageView
                        android:id="@+id/img_fece12"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_mad" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_fece13"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_fendou" />

                    <ImageView
                        android:id="@+id/img_fece14"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_funk" />

                    <ImageView
                        android:id="@+id/img_fece15"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_cry" />

                    <ImageView
                        android:id="@+id/img_fece16"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_sad" />

                    <ImageView
                        android:id="@+id/img_fece17"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_ha" />

                    <ImageView
                        android:id="@+id/img_fece18"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_huffy" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_fece19"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_pig" />

                    <ImageView
                        android:id="@+id/img_fece20"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_guzhang" />

                    <ImageView
                        android:id="@+id/img_fece21"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_victory" />

                    <ImageView
                        android:id="@+id/img_fece22"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_ok" />

                    <ImageView
                        android:id="@+id/img_fece23"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_tu" />

                    <ImageView
                        android:id="@+id/img_fece24"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_cake" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_fece25"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_hug" />

                    <ImageView
                        android:id="@+id/img_fece26"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_beer" />

                    <ImageView
                        android:id="@+id/img_fece27"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_call" />

                    <ImageView
                        android:id="@+id/img_fece28"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_time" />

                    <ImageView
                        android:id="@+id/img_fece29"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_moon" />

                    <ImageView
                        android:id="@+id/img_fece30"
                        android:layout_width="52dip"
                        android:layout_height="52dip"
                        android:padding="14dip"
                        android:src="@drawable/face_hei" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/blue_highlight" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />

        <TextView
            android:id="@+id/navbar_TitleText"
            style="@style/navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="发布帖子" />

        <Button
            android:id="@+id/btn_send"
            style="@style/navbar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_selector_navbar"
            android:text="发送" />
    </RelativeLayout>

</RelativeLayout>