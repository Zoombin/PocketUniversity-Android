package com.xyhui.types;

public class Message2 {
	public String message_id = null;
	public String list_id = null;
	public String ctime = null;
	public String content = null;
	public String from_uname = null;
	public String from_face = null;
	public String timestmap = null;
	public String from_uid = null;

	public String getHumanReadableTime() {
		long second = System.currentTimeMillis() / 1000 - Integer.valueOf(timestmap);

		if (second < 5 * 60) {
			return "刚刚";
		} else if (second < 60 * 60) {
			return second / 60 + "分钟前";
		} else if (second < 60 * 60 * 24) {
			return second / (60 * 60) + "小时前";
		} else if (second < 60 * 60 * 24 * 7) {
			return second / (60 * 60 * 24) + "天前";
		} else {
			return ctime;
		}
	}
}
