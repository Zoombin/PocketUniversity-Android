package com.xyhui.types;

import android.os.Parcel;
import android.os.Parcelable;

import com.google.gson.JsonElement;
import com.mslibs.utils.ParcelUtils;

public class User implements Parcelable {
	public String uid = null;
	public String uname = null;
	public String province = null;
	public String city = null;
	public String school = null;
	public String location = null;
	public String face = null;
	public String sex = null;
	public int weibo_count = 0;
	public int favorite_count = 0;
	public int followers_count = 0;
	public int followed_count = 0;
	public String is_followed = null;
	public int is_verified = 0;
	public int school_event_score_used = 0;
	public int school_event_credit = 0;

	public JsonElement status = null;

	public String getInfo() {
		String result = "";
		result += "微博:" + weibo_count + "   ";
		result += "关注:" + followed_count + "   ";
		result += "粉丝:" + followers_count;
		return result;
	}

	@Override
	public int describeContents() {
		return 0;
	}

	@Override
	public void writeToParcel(Parcel out, int flags) {
		ParcelUtils.writeStringToParcel(out, uname);
		ParcelUtils.writeStringToParcel(out, sex);
		ParcelUtils.writeStringToParcel(out, face);
	}

	public User() {

	}

	public User(Parcel in) {
		uname = ParcelUtils.readStringFromParcel(in);
		sex = ParcelUtils.readStringFromParcel(in);
		face = ParcelUtils.readStringFromParcel(in);
	}

	public static final Parcelable.Creator<User> CREATOR = new Parcelable.Creator<User>() {
		public User createFromParcel(Parcel in) {
			return new User(in);
		}

		@Override
		public User[] newArray(int size) {
			return new User[size];
		}
	};
}
