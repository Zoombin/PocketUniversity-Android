package com.xyhui.activity.group;

import android.os.Bundle;
import android.text.TextUtils;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;

import com.handmark.pulltorefresh.library.PullToRefreshListView;
import com.mslibs.utils.VolleyLog;
import com.xyhui.R;
import com.xyhui.utils.Preferences;
import com.xyhui.widget.FLActivity;

public class GroupUserListActivity extends FLActivity {

	Button btn_back;
	PullToRefreshListView user_listview;
	GroupMemberList mUserListView;

	String group_id = null;

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_group_user_list);

		if (getIntent().hasExtra(Preferences.INTENT_EXTRA.GROUP_ID)) {
			group_id = getIntent().getStringExtra(Preferences.INTENT_EXTRA.GROUP_ID);

			VolleyLog.d("got groupid:%s", group_id);
		}

		if (TextUtils.isEmpty(group_id)) {
			VolleyLog.d("no groupid");
			finish();
			return;
		}

		linkUiVar();
		bindListener();
		ensureUi();
	}

	@Override
	public void linkUiVar() {
		btn_back = (Button) findViewById(R.id.btn_back);

		user_listview = (PullToRefreshListView) findViewById(R.id.user_listview);
	}

	@Override
	public void bindListener() {
		btn_back.setOnClickListener(new OnClickListener() {
			@Override
			public void onClick(View v) {
				// 关闭返回
				finish();
			}
		});
	}

	@Override
	public void ensureUi() {
		mUserListView = new GroupMemberList(user_listview, mActivity, group_id,
				GroupMemberManageActivity.SELECT_TYPE_USER);
	}

}
