package com.xyhui.types;

import android.os.Parcel;
import android.os.Parcelable;
import android.text.TextUtils;

import com.mslibs.utils.ParcelUtils;

public class Announce implements Parcelable {
	public String id = null;
	public String title = null;
	public String school = null;
	public String cid = null;
	public String time = null;
	public String desc = null;
	public String content = null;

	public String school2 = null;

	@Override
	public int describeContents() {
		return 0;
	}

	@Override
	public void writeToParcel(Parcel out, int flags) {

		ParcelUtils.writeStringToParcel(out, id);
		ParcelUtils.writeStringToParcel(out, title);
		ParcelUtils.writeStringToParcel(out, school);
		ParcelUtils.writeStringToParcel(out, cid);
		ParcelUtils.writeStringToParcel(out, time);
		ParcelUtils.writeStringToParcel(out, desc);

	}

	public Announce() {
	}

	public Announce(Parcel in) {

		id = ParcelUtils.readStringFromParcel(in);
		title = ParcelUtils.readStringFromParcel(in);
		school = ParcelUtils.readStringFromParcel(in);
		cid = ParcelUtils.readStringFromParcel(in);
		time = ParcelUtils.readStringFromParcel(in);
		desc = ParcelUtils.readStringFromParcel(in);

	}

	public static final Parcelable.Creator<Announce> CREATOR = new Parcelable.Creator<Announce>() {
		public Announce createFromParcel(Parcel in) {
			return new Announce(in);
		}

		@Override
		public Announce[] newArray(int size) {
			return new Announce[size];
		}
	};

	public String getCate() {
		final String[] cate = { "", "学校发文", "学校通知", "院系通知", "其他" };

		int cateid = 0;
		try {
			cateid = Integer.parseInt(cid);
		} catch (NumberFormatException e) {
			e.printStackTrace();
		}
		if (cateid > cate.length) {
			cateid = 0;
		}

		String s2 = "";

		if (cateid == 3 && !TextUtils.isEmpty(school2)) {
			s2 = "    院系：" + school2;
		}
		return cate[cateid] + s2;
	}
}
