package com.xyhui.activity;

import android.app.Activity;
import android.app.TabActivity;
import android.content.Intent;
import android.os.Build;
import android.os.Bundle;
import android.view.View;
import android.widget.FrameLayout;
import android.widget.TabHost;

import com.mslibs.api.CallBack;
import com.mslibs.utils.JSONUtils;
import com.xyhui.R;
import com.xyhui.api.Api;
import com.xyhui.types.School;
import com.xyhui.utils.Preferences;
import com.xyhui.utils.TableOperate;

@SuppressWarnings("deprecation")
public class MainActivity extends TabActivity implements TabHost.OnTabChangeListener {

	static final long DELAYED_GOTO_DURATION = 200;

	private TabHost mTabHost;
	public Activity mActivity;
	private PuApp mainApp;
	private View loadingView;

	TabIndexActivity tabIndexActivity;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_main);

		mActivity = this;
		mainApp = (PuApp) getApplication();
		loadingView = findViewById(R.id.loading_view);

		initTabHost();

		tabIndexActivity = (TabIndexActivity) getLocalActivityManager().getActivity("index");

		if (mainApp.getPreference(Preferences.LOCAL.CITYID) == null
				|| mainApp.getPreference(Preferences.LOCAL.SCHOOLID) == null) {
			tabIndexActivity.showProgress();
			new Api(userSchoolCallback).getUserSchool(mainApp.getToken());
		}

		if (!mainApp.catDataArrived()) {
			mainApp.setEventCats();
			mainApp.setCourseCats();
			mainApp.setGroupCats();
		}
	}

	private void initTabHost() {
		if (mTabHost != null) {
			throw new IllegalStateException("Trying to intialize already initializd TabHost");
		}

		mTabHost = getTabHost();

		TableOperate.addTab(mTabHost, "主页", R.drawable.tab_selector_index, "index", new Intent(
				this, TabIndexActivity.class));
		TableOperate.addTab(mTabHost, "微博", R.drawable.tab_selector_weibo, "weibo", new Intent(
				this, TabWeiboActivity.class));
		TableOperate.addTab(mTabHost, "应用", R.drawable.tab_selector_app, "app", new Intent(this,
				TabAppActivity.class));
		TableOperate.addTab(mTabHost, "好友", R.drawable.tab_selector_friend, "friend", new Intent(
				this, TabFriendActivity.class));
		TableOperate.addTab(mTabHost, "更多", R.drawable.tab_selector_more, "more", new Intent(this,
				TabMoreActivity.class));

		// Fix layout for 1.5.
		if (new Integer(Build.VERSION.SDK_INT).intValue() < 4) {
			FrameLayout flTabContent = (FrameLayout) findViewById(android.R.id.tabcontent);
			flTabContent.setPadding(0, 0, 0, 0);
		}

	}

	@Override
	public void onTabChanged(String tabId) {

	}

	public void showLoading() {
		loadingView.setVisibility(View.VISIBLE);
	}

	public void hideLoading() {
		loadingView.setVisibility(View.GONE);
	}

	CallBack userSchoolCallback = new CallBack() {

		@Override
		public void onSuccess(String response) {
			tabIndexActivity.dismissProgress();
			School userSchool = JSONUtils.fromJson(response, School.class);
			if (null != userSchool) {
				mainApp.setPreference(Preferences.LOCAL.CITYID, userSchool.cityId);
				mainApp.setPreference(Preferences.LOCAL.SCHOOLID, userSchool.id);
			}
		}
	};
}
