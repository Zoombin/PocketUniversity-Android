package com.xyhui.activity;

import android.content.Intent;
import android.graphics.drawable.AnimationDrawable;
import android.os.Bundle;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.ImageView;

import com.xyhui.R;
import com.xyhui.utils.Params;
import com.xyhui.utils.PrefUtil;
import com.xyhui.widget.FLActivity;

public class NewFeatureActivity extends FLActivity {
	private ImageView img_new_feature;
	private AnimationDrawable mAnim;

	private PrefUtil mPrefUtil;

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_new_feature);

		mPrefUtil = new PrefUtil();

		linkUiVar();
		bindListener();
		ensureUi();
	}

	@Override
	public void linkUiVar() {
		img_new_feature = (ImageView) findViewById(R.id.img_new_feature);
		mAnim = (AnimationDrawable) img_new_feature.getBackground();
	}

	@Override
	public void bindListener() {
		img_new_feature.setOnClickListener(new OnClickListener() {

			@Override
			public void onClick(View v) {
				mAnim.stop();
				Intent intent = new Intent();
				intent.setClass(NewFeatureActivity.this, MainActivity.class);
				startActivity(intent);
				finish();
			}
		});
	}

	@Override
	public void ensureUi() {
		String currentVersion = getVersion();
		String oldVersion = mPrefUtil.getPreference(Params.LOCAL.VERSION);

		if (null == oldVersion || currentVersion.compareTo(oldVersion) != 0) {
			Intent intent = new Intent();
			intent.setClass(NewFeatureActivity.this, MainActivity.class);
			startActivity(intent);
			finish();
		} else {
			mAnim.start();
		}
	}
}
