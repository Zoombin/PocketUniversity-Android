<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.xyhui.widget.BannerLayout
                android:id="@+id/index_banner"
                android:layout_width="match_parent"
                android:layout_height="160dip"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:paddingTop="6dip" >

                <LinearLayout
                    android:id="@+id/layout_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_index_notice"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical"
                    android:padding="12dip" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通知公告"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_announcecount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有0条新的通知"
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_event"
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_index_event"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical"
                    android:padding="12dip" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <!-- 6个正在进行的活动 -->

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="精彩活动，等你参与"
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:paddingTop="6dip" >

                <LinearLayout
                    android:id="@+id/layout_group"
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_index_group"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical"
                    android:padding="12dip" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="部落"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_groupcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已加入0个部落"
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_index_mapnavigation"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical"
                    android:padding="12dip" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导航"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <!-- 12个地图，320个地点 -->

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地图随手掌握"
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:paddingTop="6dip" >

                <LinearLayout
                    android:id="@+id/layout_searchfriend"
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_index_searchfriend"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical"
                    android:padding="12dip" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="寻找好友"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="寻找同学、老乡"
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_accountsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="64dip"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="1"
                    android:background="@drawable/btn_index_accountsetting"
                    android:gravity="center_vertical|left"
                    android:orientation="vertical"
                    android:padding="12dip" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号管理"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看个人账号信息"
                        android:textColor="#fff"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dip"
                android:src="@drawable/ico_signin_logo_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dip"
                android:text="娱乐的分享，友情的建立，知识的交流" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="10dip" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:src="@drawable/ico_navigation_logo" />

            <TextView
                android:id="@+id/navbar_TitleText"
                style="@style/navigation_title"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:gravity="center_vertical"
                android:text="PocketUni" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>