<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" 
                    android:background="@drawable/group_bg">

                    <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="4dip"
                        android:background="@drawable/user_avatar_mask"
                        android:cropToPadding="true"
                        android:padding="4dip"
                        android:scaleType="centerCrop"
                        android:src="@drawable/group_avatar" />

                    <ImageView
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dip"
                        android:layout_marginTop="4dip"
                        android:src="@drawable/user_avatar_mask_top" />

                    <TextView
                        android:id="@+id/text_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_avatar"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="4dip"
                        android:layout_toRightOf="@+id/img_avatar"
                        android:gravity="center_vertical"
                        android:shadowColor="#000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="0.01"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_group_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_group_name"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@+id/img_avatar"
                        android:gravity="center_vertical"
                        android:lineSpacingMultiplier="1.1"
                        android:shadowColor="#000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="0.01"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_group"
                        android:layout_width="98dip"
                        android:layout_height="42dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="4dip"
                        android:layout_marginRight="4dip"
                        android:background="@drawable/btn_group_join_n"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_params_bg"
                    android:orientation="horizontal"
                    android:padding="4dip" >

                    <LinearLayout
                        android:id="@+id/btn_params_blog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_selector_user_params"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_params_blog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#fff"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.01"
                            android:text=""
                            android:textColor="#666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#fff"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.01"
                            android:text="帖子"
                            android:textColor="#999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_params_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_selector_user_params"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_params_doc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#fff"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.01"
                            android:text=""
                            android:textColor="#666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#fff"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.01"
                            android:text="共享"
                            android:textColor="#999"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_params_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_selector_user_params"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_params_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#fff"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.01"
                            android:text=""
                            android:textColor="#666"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#fff"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="0.01"
                            android:text="成员"
                            android:textColor="#999"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <TextView
                        style="@style/navigation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="部落公告："
                        android:textColor="#894"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dip" >

                <TextView
                    style="@style/navigation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部落介绍："
                    android:textColor="#894"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#777"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blog_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e8e8e8"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <TextView
                        style="@style/navigation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新帖子："
                        android:textColor="#894"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />

                <LinearLayout
                    android:id="@+id/new_bloglist_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/blog_getmore_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/list_item_getmore_title"
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="查看更多帖子"
                        android:textColor="#444"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1.5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/weibo_split" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        
        android:id="@+id/unverify_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip"
        android:gravity="center"
        android:background="#80000000" >

        <TextView
            android:id="@+id/text_unverify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sorry！该部落正在审核中！"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/navbar_TitleText"
                style="@style/navigation_title"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:gravity="center_vertical"
                android:text="部落首页" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />

        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_selector_navbar_more" />
    </RelativeLayout>
</RelativeLayout>