<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip"
        android:orientation="vertical"
        android:padding="12dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_top"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ico_more_account" />

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="16dip"
                android:text="账号昵称："
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_mid"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/credit" />

            <TextView
                android:id="@+id/text_credit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="16dip"
                android:text="实践学分："
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_mid"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/score" />

            <TextView
                android:id="@+id/text_total_score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="16dip"
                android:text="活动积分："
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_mid"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/pu_coin" />

            <TextView
                android:id="@+id/text_pu_coin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="16dip"
                android:text="PU币："
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_mid"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dip"
                android:src="@drawable/pu_integrity" />

            <TextView
                android:id="@+id/text_integrity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="16dip"
                android:text="诚信度："
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/baseinfo_layout"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_mid"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_more_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="账号信息修改"
                android:textColor="#666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dip"
                android:layout_height="44dip"
                android:scaleType="center"
                android:src="@drawable/more_black" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/cellphone_layout"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_mid"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_more_iphone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="绑定手机"
                android:textColor="#666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dip"
                android:layout_height="44dip"
                android:scaleType="center"
                android:src="@drawable/more_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/list_item_bg_bottom"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_more_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="账号密码修改"
                android:textColor="#666"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="30dip"
                android:layout_height="44dip"
                android:scaleType="center"
                android:src="@drawable/more_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dip"
            android:background="@drawable/btn_selector_user_params"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="26dip"
            android:paddingRight="26dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_more_cancel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dip"
                android:shadowColor="#fff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.01"
                android:text="注销账号"
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:gravity="center"
            android:text="退出登录状态，需要重新登录才能进入客户端"
            android:textColor="#aaa"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <TextView
            android:id="@+id/navbar_TitleText"
            style="@style/navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="账号管理" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

</RelativeLayout>