<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/all_event_toolbar"
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner_school"
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinner_sort"
                android:layout_width="0dip"
                android:layout_height="44dip"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_event_toolbar"
            android:layout_width="match_parent"
            android:layout_height="43dip" >

            <Button
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_notice_sort"
                android:text="发起的活动"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_notice_sort"
                android:text="参加的活动"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_favor"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_notice_sort"
                android:text="收藏的活动"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/weibo_split" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/all_event_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/my_event_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_all_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_nav_following"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.01"
                android:text="所有活动"
                android:textColor="#fff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_my_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_nav_followed"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.01"
                android:text="我的活动"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />

        <Button
            android:id="@+id/btn_search"
            style="@style/navbar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_selector_navbar_search" />
    </RelativeLayout>

</RelativeLayout>