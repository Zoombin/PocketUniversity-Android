<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dip" >

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="扫描结果描述"
            android:textColor="#666"
            android:textSize="18sp" />
        
        <ImageView
            android:id="@+id/img_scan_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:scaleType="center" 
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:scaleType="fitXY"
            android:src="@drawable/weibo_split" />

        <LinearLayout
            android:id="@+id/btn_addfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_selector_user_params"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="26dip"
            android:paddingRight="26dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_more_addgroup" />

            <TextView
                android:id="@+id/text_addfriend_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dip"
                android:shadowColor="#fff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.01"
                android:text="关注好友"
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_eventcheckin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_selector_user_params"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="26dip"
            android:paddingRight="26dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_more_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dip"
                android:shadowColor="#fff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.01"
                android:text="签到活动"
                android:textColor="#666"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/navbar_TitleText"
                style="@style/navigation_title"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:gravity="center_vertical"
                android:text="扫描结果" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

</RelativeLayout>