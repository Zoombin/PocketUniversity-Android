<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/notice_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_official_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_nav_following"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.01"
                android:text="官方公告"
                android:textColor="#fff"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_school_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector_nav_followed"
                android:shadowColor="#000"
                android:shadowDx="0"
                android:shadowDy="-1"
                android:shadowRadius="0.01"
                android:text="校内通知"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="44dip"
        android:background="@drawable/bar_tool_bg" >

        <Button
            android:id="@+id/btn_sort01"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="全部"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_sort04"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="院系通知"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_sort02"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="学校发文"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_sort03"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="学校通知"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_sort05"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="其他"
            android:textSize="13sp" />
        
        <Button
            android:id="@+id/btn_sort06"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="公告"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_sort07"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="活动"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>