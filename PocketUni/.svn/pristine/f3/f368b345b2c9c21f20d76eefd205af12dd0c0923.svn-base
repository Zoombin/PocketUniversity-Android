<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/message_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/atme_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/comments_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <TextView
            android:id="@+id/navbar_TitleText"
            style="@style/navigation_title"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="消息" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="44dip"
        android:background="@drawable/bar_tool_bg" >

        <Button
            android:id="@+id/btn_message"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="私信"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_atme"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="转发"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_comments"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_weight="1"
            android:background="@drawable/btn_selector_notice_sort"
            android:text="评论"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>