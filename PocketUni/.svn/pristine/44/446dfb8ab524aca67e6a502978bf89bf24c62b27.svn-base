<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/forward_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingTop="1dip"
        android:shadowColor="#90ffffff"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        android:text="邻家女孩："
        android:textColor="#000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spanned_textview_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="none"
        android:lineSpacingMultiplier="1.1"
        android:shadowColor="#90ffffff"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        android:text="在小区散步，看见一个男人背着一只金毛，对，没错，是金毛，就是那种长的好大的狗狗。目瞪口呆….在人家走过去之后还是忍不住说：“咋背着呢，这怎么背得动，让它自己走啊”。男人回过头来认真地解释：“它17岁了，走不动了，就背出来让它看看外面，它高兴” 感动~"
        android:textColor="#444"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_weibo"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:background="#fff"
        android:cropToPadding="true"
        android:padding="2dip"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default" />

</LinearLayout>