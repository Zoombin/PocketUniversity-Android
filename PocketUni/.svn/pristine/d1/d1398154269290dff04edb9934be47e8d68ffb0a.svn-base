<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dip" >

                <ImageView
                    android:id="@+id/img_event_banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:layout_alignParentBottom="true"
                    android:background="#90000000"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/text_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:background="@drawable/user_params_bg"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_event"
                        android:text="我要参加"
                        android:textColor="#fff"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_checkin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_event"
                        android:text="活动签到"
                        android:textColor="#fff"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_event"
                        android:text="分享活动"
                        android:textColor="#fff"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/btn_favor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_event"
                        android:text="收藏活动"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <TextView
                        android:id="@+id/text_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.2"
                        android:text="活动说明"
                        android:textColor="#555"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e8e8e8"
                    android:orientation="vertical"
                    android:padding="8dip" >

                    <TextView
                        style="@style/navigation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动发起者："
                        android:textColor="#894"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />

                <RelativeLayout
                    android:id="@+id/user_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dip" >

                    <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="34dip"
                        android:layout_height="34dip"
                        android:layout_alignParentLeft="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar00" />

                    <ImageView
                        android:id="@+id/img_avatar_mask"
                        android:layout_width="34dip"
                        android:layout_height="34dip"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/avatar_mask" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_avatar"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="20dip"
                        android:layout_toRightOf="@+id/img_avatar"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/text_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#90ffffff"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="0.01"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_params"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dip"
                            android:text=""
                            android:textColor="#aaa"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dip"
                        android:scaleType="center"
                        android:src="@drawable/more_black" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#e8e8e8"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/navigation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dip"
                        android:text="人气排行:"
                        android:textColor="#894"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_more_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/none"
                        android:padding="8dip"
                        android:text="更多" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/weibo_split" />

                <LinearLayout
                    android:id="@+id/userlist_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/event_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/list_item_getmore_title"
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="查看更多活动详情"
                    android:textColor="#444"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/navbar_TitleText"
                style="@style/navigation_title"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:gravity="center_vertical"
                android:text="活动首页" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
        
        <Button
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip"
            android:background="@drawable/btn_selector_navbar_more" />
    </RelativeLayout>

</RelativeLayout>