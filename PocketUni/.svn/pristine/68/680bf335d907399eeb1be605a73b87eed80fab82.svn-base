<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dip" >

        <LinearLayout
            android:id="@+id/img_avatar_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:layout_centerVertical="true"
            android:padding="1dip" >

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="72dip"
                android:layout_height="72dip"
                android:layout_alignParentLeft="true"
                android:background="#fff"
                android:cropToPadding="true"
                android:padding="2dip"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_avatar_linear"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="20dip"
            android:layout_toRightOf="@+id/img_avatar_linear"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_flag"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:layout_marginRight="4dip"
                    android:background="#f00"
                    android:gravity="center"
                    android:shadowColor="#90ffffff"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:singleLine="true"
                    android:text="校"
                    android:textColor="#fff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#90ffffff"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="0.01"
                    android:singleLine="true"
                    android:text="苏州大学“心在跳·梦随形”炫舞之星大赛"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:text="活动时间：2013-05-08 22:30:00 至 2013-05-11 00:00:00\n发起人：邹晓文\n参加人数（22）"
                android:textColor="#aaa"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/more_black" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:scaleType="fitXY"
        android:src="@drawable/weibo_split" />

</LinearLayout>