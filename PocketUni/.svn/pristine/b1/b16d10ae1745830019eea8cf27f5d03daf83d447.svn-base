package com.xyhui.types;

import android.text.TextUtils;

public class EventBanner {
	public String id = null;
	public String title = null;
	public String banner = null;
	public String sTime = null;
	public String eTime = null;
	public String uid = null;
	public String sid = null;
	public String cid = null;
	public String joinCount = null;
	public String note = null;
	public String noteUser = null;
	public String isTop = null;
	public String cover = null;
	public String uname = null;
	public String sName = null;
	public String cName = null;
	public int hasJoin = 0;
	public int canJoin = 0;
	public int hasNoted = 0;
	public int showAttend = 0;
	public int need_tel = 0;

	public String is_school_event = "0";

	public String address = null;
	public String cost = null;
	public String costExplain = null;
	public String deadline = null;
	public String contact = null;
	public String uface = null;
	public String orga = null;
	public String news = null;
	public String photo = null;
	public String description = null;

	public boolean hasFav = false;

	public String getTips() {
		return "活动时间：" + sTime + " 至 " + eTime + "\n发起人：" + uname + "\n参加人数（" + joinCount + "）";
	}

	public String getNotice() {
		String result = "";
		if (!TextUtils.isEmpty(address)) {
			result += "活动地点：" + address;
		}
		if (!TextUtils.isEmpty(sTime) && !TextUtils.isEmpty(eTime)) {
			result += "\n活动时间：" + sTime + " 至 " + eTime;
		}
		if (!TextUtils.isEmpty(deadline)) {
			result += "\n报名截止时间：" + deadline;
		}
		if (!TextUtils.isEmpty(cost)) {
			result += "\n活动经费：";
			if ("0".equalsIgnoreCase(cost)) {
				result += "免费";
			} else {
				result += cost;
			}
			if (!TextUtils.isEmpty(costExplain)) {
				result += "(" + costExplain + ")";
			}
		}
		if (!TextUtils.isEmpty(description)) {
			result += "\n活动简介：" + description;
		}

		if (!TextUtils.isEmpty(contact)) {
			result += "\n联系方式：" + contact;
		}

		return result;
	}

	public EventBanner() {

	}
}
