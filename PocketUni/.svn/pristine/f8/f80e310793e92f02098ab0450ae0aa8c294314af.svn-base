package com.xyhui.activity.event;

import android.os.Bundle;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.Button;
import android.widget.TextView;

import com.mslibs.utils.JSONUtils;
import com.mslibs.utils.VolleyLog;
import com.xyhui.R;
import com.xyhui.activity.PuApp;
import com.xyhui.api.Api;
import com.xyhui.api.CallBack;
import com.xyhui.types.EventNews;
import com.xyhui.utils.Preferences;
import com.xyhui.widget.FLActivity;
import com.xyhui.widget.SpannedTextViewBlog;

public class EventNewsViewActivity extends FLActivity {
	Button btn_back;

	TextView text_title;
	TextView text_params;
	SpannedTextViewBlog text_content;

	EventNews news = null;

	@Override
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_event_news_view);

		if (getIntent().hasExtra(Preferences.INTENT_EXTRA.EVENTNEWS)) {
			news = getIntent().getParcelableExtra(Preferences.INTENT_EXTRA.EVENTNEWS);
			VolleyLog.d("got announce 传入:%s", news.title);
		} else {
			VolleyLog.d("没有announce传入");
			finish();
			return;
		}

		linkUiVar();
		bindListener();
		ensureUi();
	}

	@Override
	public void linkUiVar() {
		btn_back = (Button) findViewById(R.id.btn_back);
		text_title = (TextView) findViewById(R.id.text_title);
		text_params = (TextView) findViewById(R.id.text_params);
		text_content = (SpannedTextViewBlog) findViewById(R.id.text_content);

	}

	@Override
	public void bindListener() {
		btn_back.setOnClickListener(new OnClickListener() {
			@Override
			public void onClick(View v) {
				// 关闭返回
				finish();
			}
		});

	}

	@Override
	public void ensureUi() {
		text_title.setText(news.title);
		// text_params.setText("类别：" + announce.getCate() + "\n发布时间：" + announce.time);
		text_content.setData(null);

		PuApp mApplication = (PuApp) getApplication();

		showProgress();
		new Api(callback, mActivity).getNews(mApplication.getToken(), news.id);

	}

	CallBack callback = new CallBack() {
		@Override
		public void onSuccess(String response) {
			dismissProgress();
			EventNews item = JSONUtils.fromJson(response, EventNews.class);
			text_title.setText(item.title);

			text_content.setData(item.content);
		}
	};
}
