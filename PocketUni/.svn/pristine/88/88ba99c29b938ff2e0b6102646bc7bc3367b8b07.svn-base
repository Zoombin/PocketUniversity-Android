<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc" >

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dip"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="0dip"
                android:layout_height="43dip"
                android:layout_weight="1"
                android:layout_marginLeft="6dip" />

            <Spinner
                android:id="@+id/spinner_school"
                android:layout_width="0dip"
                android:layout_height="43dip"
                android:layout_weight="1"
                android:layout_marginLeft="6dip"
                android:layout_marginRight="6dip" />
            
            <Spinner
                android:id="@+id/spinner_dpart"
                android:layout_width="0dip"
                android:layout_height="43dip"
                android:layout_weight="1"
                android:layout_marginRight="6dip"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/weibo_split" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/user_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="132dip"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bar_navigation_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/navbar_TitleText"
                style="@style/navigation_title"
                android:layout_width="wrap_content"
                android:layout_height="44dip"
                android:gravity="center_vertical"
                android:text="寻找好友" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dip"
            android:background="@drawable/btn_selector_navbar_backicon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="44dip"
        android:background="@drawable/bar_tool_bg"
        android:paddingBottom="3dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="3dip" >

        <EditText
            android:id="@+id/edit_keyword"
            android:layout_width="match_parent"
            android:layout_height="38dip"
            android:background="@drawable/widget_search"
            android:hint="输入好友昵称…"
            android:singleLine="true"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/edit_keyword"
            android:background="@drawable/search_btn" />
    </RelativeLayout>

</RelativeLayout>